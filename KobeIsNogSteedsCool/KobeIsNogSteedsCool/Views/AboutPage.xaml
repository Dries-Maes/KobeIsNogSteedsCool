<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KobeIsNogSteedsCool.Views.AboutPage">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*">
            <Image Source="xamarin_logo.png"
                   VerticalOptions="Center"
                   HeightRequest="64"
                   BackgroundColor="{OnPlatform Android= LightBlue , UWP= DodgerBlue}" />
            <StackLayout Grid.Row="1"
                         Margin="20"
                         Spacing="20">
                <Label FontSize="22">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Kobe Is Niet Meer Boos"
                                      FontAttributes="Bold"
                                      FontSize="22" />

                                <Span Text="V1.0" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Text="20MinNietOm" />
                <Button Text="LearnMore"
                        Clicked="OnButtonLearnMoreClicked" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>